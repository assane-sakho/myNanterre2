<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".implem.library.fragment.InformationFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="65dp"
            android:layout_height="69dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_support" />

        <TextView
            android:id="@+id/textInfoSupport"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Signalez des erreurs ou donnez des suggestions. Toute l'Ã©quipe vous remercie."
            android:textAlignment="center"
            android:textAllCaps="true"
            app:layout_constraintBottom_toBottomOf="@+id/imageView11"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView11"
            app:layout_constraintTop_toTopOf="@+id/imageView11" />

        <ImageView
            android:id="@+id/barre1"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="22dp"
            android:background="#E40E1F"
            app:layout_constraintBottom_toTopOf="@+id/editTextTextMultiLine"
            app:layout_constraintEnd_toEndOf="@+id/editTextTextMultiLine"
            app:layout_constraintStart_toStartOf="@+id/editTextTextMultiLine"
            app:layout_constraintTop_toBottomOf="@+id/imageClub"
            app:srcCompat="?attr/actionBarItemBackground" />

        <EditText
            android:id="@+id/SupportMessage"
            android:layout_width="0dp"
            android:layout_height="350dp"
            android:layout_marginTop="24dp"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textLongMessage"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textInfoSupport" />

        <Button
            android:id="@+id/Valider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Envoyer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/SupportMessage" />



    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>








